generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  logs     Log[]
}

model Log {
  id         Int      @id @default(autoincrement())
  employeeId Int
  type       LogType
  createdAt  DateTime @default(now())
  employee   Employee @relation(fields: [employeeId], references: [id])
}

enum LogType {
  LOGIN
  LOGOUT
  LUNCH_BREAK_START
  LUNCH_BREAK_END
  PRAYER_BREAK_START
  PRAYER_BREAK_END
  LEAVE_DESK_START
  LEAVE_DESK_END
}
